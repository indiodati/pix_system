<h1 class="text-3xl font-bold mb-6">Meus Saques</h1>

<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-600 font-medium rounded-md inline-block" id="notice">
    <%= notice %>
  </p>
<% end %>

<div class="mb-4 flex justify-between items-center">
  <p class="text-gray-600 text-sm">
    Acompanhe aqui o histórico de saques realizados.
  </p>
  <%= link_to "Novo saque",
              new_withdrawal_path,
              class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
</div>

<div class="bg-white shadow rounded">
  <% if @withdrawals.any? %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            ID no Gateway
          </th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Valor
          </th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Chave PIX
          </th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Data
          </th>
        </tr>
      </thead>

      <tbody class="bg-white divide-y divide-gray-200">
        <% @withdrawals.each do |w| %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-2 text-sm text-gray-700">
              <%= w.gateway_id.presence || "-" %>
            </td>

            <td class="px-4 py-2 text-sm text-gray-700">
              <%= number_to_currency(w.amount.to_i / 100.0, unit: "R$") %>
            </td>

            <td class="px-4 py-2 text-sm text-gray-700">
              <%= w.pix_key.presence || "-" %>
            </td>

            <td class="px-4 py-2 text-sm">
              <% case w.status.to_s.upcase %>
              <% when "PENDING" %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  Pendente
                </span>
              <% when "PAID", "COMPLETED" %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Pago
                </span>
              <% when "FAILED", "CANCELED" %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Falhou
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                  <%= w.status.to_s.humanize %>
                </span>
              <% end %>
            </td>

            <td class="px-4 py-2 text-sm text-gray-700">
              <%= l(w.created_at, format: "%d/%m/%Y %H:%M") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <!-- Paginação -->
    <div class="px-4 py-3 border-t border-gray-200">
      <div class="flex justify-center">
        <%= paginate @withdrawals %>
      </div>
    </div>
  <% else %>
    <p class="text-center text-gray-500 py-4">Nenhum saque encontrado.</p>
  <% end %>
</div>
