<%= form_with model: pix_transaction,
              url: pix_transactions_path,
              local: true,
              class: "contents" do |form| %>

 
  <!-- Valor em reais -->
  <div class="my-5">
    <%= form.label :amount_reais, "Valor do PIX", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :amount_reais,
      placeholder: "Ex: 150,00",
      value: pix_transaction.amount_reais,
      class: [
        "money-input",
        "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
        pix_transaction.errors[:amount_reais].any? ?
          "border-red-400 focus:outline-red-600" :
          "border-gray-400 focus:outline-blue-600"
      ] %>
    <p class="mt-1 text-xs text-gray-500">
      Informe o valor em reais, com vírgula. Ex: <strong>99,90</strong>
    </p>
  </div>

  <!-- Descrição -->
  <div class="my-5">
    <%= form.label :description, "Descrição da Transação", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :description,
      placeholder: "Ex: Pagamento de serviço",
      class: [
        "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
        pix_transaction.errors[:description].any? ?
          "border-red-400 focus:outline-red-600" :
          "border-gray-400 focus:outline-blue-600"
      ] %>
  </div>

  <!-- Info do gateway (apenas leitura) -->
  <div class="my-4 text-xs text-gray-500">
    O sistema vai usar automaticamente o gateway PIX configurado na sua conta
    (<strong><%= current_user.pix_gateway %></strong>).
  </div>

  <div class="mt-6">
    <%= form.submit "Gerar QR Code PIX",
      class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
