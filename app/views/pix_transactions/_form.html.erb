<%= form_with(model: pix_transaction, class: "contents") do |form| %>
  <% if pix_transaction.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(pix_transaction.errors.count, "error") %> prohibited this pix_transaction from being saved:</h2>

      <ul class="list-disc ml-6">
        <% pix_transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pix_transaction.errors[:user_id].none?, "border-red-400 focus:outline-red-600": pix_transaction.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pix_transaction.errors[:amount].none?, "border-red-400 focus:outline-red-600": pix_transaction.errors[:amount].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pix_transaction.errors[:status].none?, "border-red-400 focus:outline-red-600": pix_transaction.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :transaction_type %>
    <%= form.text_field :transaction_type, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pix_transaction.errors[:transaction_type].none?, "border-red-400 focus:outline-red-600": pix_transaction.errors[:transaction_type].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :pix_key %>
    <%= form.text_field :pix_key, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pix_transaction.errors[:pix_key].none?, "border-red-400 focus:outline-red-600": pix_transaction.errors[:pix_key].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pix_transaction.errors[:description].none?, "border-red-400 focus:outline-red-600": pix_transaction.errors[:description].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
