<%# app/views/kaminari/_paginator.html.erb %>
<%= paginator.render do %>
  <nav class="flex items-center justify-center mt-6 space-x-2">
    <%= prev_page_tag %>

    <% each_page do |page| %>
      <% if page.left_outer? || page.right_outer? || page.inside_window? %>
        <%= page_tag page %>
      <% elsif !page.was_truncated? %>
        <%= gap_tag %>
      <% end %>
    <% end %>

    <%= next_page_tag %>
  </nav>
<% end %>
